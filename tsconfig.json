{
    "compilerOptions": {
      "target": "ES2019",
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "rootDir": "src",
      "moduleSuffixes": [],
      "resolveJsonModule": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "typeRoots": ["./src/core/@types", "./node_modules/@types"],
      "baseUrl": "."
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "dist",
      "node_modules",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ]
  }